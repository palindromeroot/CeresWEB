{
  "name": "next-template",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "npm run lint:eslint && npm run lint:stylelint",
    "lint:eslint": "eslint --fix --config eslint.config.mjs 'src/**/*.{js,jsx,ts,tsx}'",
    "lint:stylelint": "stylelint --fix --config stylelint.config.js 'src/**/*.{css,scss}'",
    "format": "prettier --write .",
    "type-check": "tsc --noEmit",
    "lint-staged": "lint-staged",
    "postinstall": "git config core.hooksPath .git-hooks || echo 'Не в git репозитории'"
  },
  "lint-staged": {
    "src/**/*.{css,scss}": "npm run lint:stylelint",
    "src/**/*.{ts,tsx,js,jsx}": "npm run lint:eslint",
    "src/**/*.{ts,tsx,js,jsx,json,md}": "npm run format"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^2.7.0",
    "@types/nodemailer": "^7.0.1",
    "formik": "^2.4.6",
    "next": "15.3.1",
    "nodemailer": "^7.0.6",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-redux": "^9.2.0",
    "sass": "^1.88.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9.25.0",
    "eslint-config-next": "^15.3.1",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsdoc": "^50.6.9",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.2.6",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-sort-keys-fix": "^1.1.2",
    "lint-staged": "^16.0.0",
    "prettier": "^3.5.3",
    "stylelint": "^16.18.0",
    "stylelint-config-standard-scss": "^14.0.0",
    "stylelint-prettier": "^5.0.3",
    "stylelint-scss": "^6.11.1",
    "stylelint-selector-tag-no-without-class": "^3.0.1",
    "typescript": "^5"
  }
}
